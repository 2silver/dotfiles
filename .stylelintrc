{
    "extends": [
        "stylelint-config-standard"
    ],
    "plugins": [
        "stylelint-order",
        "stylelint-scss"
    ],
    "rules": {
        "at-rule-empty-line-before": null,
        "at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": ["@each", "extend", "include"]
            }
        ],
        "at-rule-no-vendor-prefix": true,
        "indentation": 4
    }
}

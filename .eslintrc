/*

*/
{
    "extends": [
        "eslint:recommended",
        "plugin:prettier/recommended"
    ],
    "plugins": [
        "prettier"
    ],
    "env":
    {
        "es6": true,
        "browser": true
    },
    "rules":
    {
        // "prettier/prettier": 0,
        /* not ready for now :-) */
        "prettier/prettier": ["error",
        {
            "singleQuote": true,
            "trailingComma": "all",
            "bracketSpacing": false,
            "jsxBracketSameLine": true,
            "parser": "flow"
        }],

        "no-bitwise": 2,
        "camelcase": 0,
        "curly": [
            2
        ],
        "eqeqeq": 2,
        "wrap-iife": [
            "error",
            "inside"
        ],
        "indent": [
            2,
            2,
            {
                "SwitchCase": 1
            }
        ],
        "no-console": 0,
        "no-use-before-define": [
            2,
            {
                "functions": false
            }
        ],
        "new-cap": [
            1,
            {
                "newIsCap": true
            }
        ],
        "no-caller": 2,
        "quotes": [
            2,
            "single"
        ],
        "no-cond-assign": 0,
        "no-eq-null": 2,
        "no-unused-expressions": [
            2,
            {
                "allowShortCircuit": true,
                "allowTernary": true
            }
        ],
        "no-unused-vars": [
            1,
            {
                "vars": "local"
            }
        ],
        "no-undef": 2,
        "strict": 0
    }
}
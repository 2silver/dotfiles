# editorconfig.org

root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
# editorconfig-tools is unable to ignore longs strings or urls
max_line_length = null

[*.md]

[*.html, *.pt]
indent_size = 4

[*.js]
indent_size = 2

[*.py]
trim_trailing_whitespace = false
indent_size = 4

[*.scss,*.css]
indent_size = 4
insert_final_newline = true